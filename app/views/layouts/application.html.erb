<!DOCTYPE html>
<html>
  <head>
    <title>RoomManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Room Management', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Room Booking', rooms_path %></li>
            <% if can? :index, Holiday %>
              <li><%= link_to 'Declare Holiday', holidays_path %></li>
            <% end %>
          </ul>
        </div>
        <ul class="nav navbar-nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.full_name.humanize %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_user_registration_path %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
<!--               <ul class="hmenu">
              <%#= render 'devise/menu/registration_items' %>
              <%#= render 'devise/menu/login_items' %>
            </ul> -->
          <% end %>
        </ul>
        <% if params[:controller] == "rooms" %>
          <div class="col-sm-3 col-md-3 pull-right">
            <%= form_tag rooms_path, {method: :get, class: "navbar-form", role: "search"} do %>
  <!--           <form class="navbar-form" role="search">
   -->            <div class="input-group">
                <%= text_field_tag :query, nil, {class: "form-control", placeholder: "Search", id:"srch-term"} %>
                <!-- <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term"> -->
                <div class="input-group-btn">
                  <%#= submit_tag "<i class='glyphicon glyphicon-search'></i>", class: "btn btn-default"%>
                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
              </div>
            <% end %>  
            <!-- </form> -->
          </div> 
        <% end %> 

        </div>
      </div>
    </nav>
    <p class="notice"><%#= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
